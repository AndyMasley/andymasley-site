<script>
  function initWritingPage() {
    // Top-level dropdown toggle
    document.querySelectorAll('.top-toggle').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const expanded = newBtn.getAttribute('aria-expanded') === 'true';
        newBtn.setAttribute('aria-expanded', String(!expanded));

        const section = newBtn.getAttribute('data-section');
        const content = document.querySelector(`[data-content="${section}"]`) as HTMLElement;
        if (content) {
          content.hidden = expanded;
        }
      });
    });

    // Stacked panel functionality
    const backdrop = document.getElementById('panel-backdrop');
    const panel = document.getElementById('stacked-panel');
    const panelContent = document.getElementById('panel-content');
    const panelClose = document.getElementById('panel-close');

    function openPanel(slug: string) {
      const template = document.getElementById(`content-${slug}`) as HTMLTemplateElement;
      if (template && panelContent) {
        panelContent.innerHTML = '';
        panelContent.appendChild(template.content.cloneNode(true));
        backdrop?.classList.add('open');
        panel?.classList.add('open');
        document.body.style.overflow = 'hidden';
      }
    }

    function closePanel() {
      backdrop?.classList.remove('open');
      panel?.classList.remove('open');
      document.body.style.overflow = '';
    }

    // Meta link click handler
    document.querySelectorAll('.meta-link').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const slug = newBtn.getAttribute('data-slug');
        if (slug) {
          openPanel(slug);
        }
      });
    });

    // Close panel handlers
    panelClose?.addEventListener('click', closePanel);
    backdrop?.addEventListener('click', closePanel);

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && panel?.classList.contains('open')) {
        closePanel();
      }
    });

    // Timeline filtering
    const subcategoryFilters = document.getElementById('subcategory-filters');

    function updateTimelineDisplay() {
      // Hide empty years
      document.querySelectorAll('.year-group').forEach(group => {
        const visiblePosts = group.querySelectorAll('.timeline-row:not(.hidden)');
        if (visiblePosts.length === 0) {
          group.classList.add('hidden');
        } else {
          group.classList.remove('hidden');
        }
      });

      // Update month labels (show on first visible post of each month)
      document.querySelectorAll('.year-group').forEach(yearGroup => {
        const seenMonths = new Set();
        yearGroup.querySelectorAll('.timeline-row').forEach(row => {
          const monthLabel = row.querySelector('.timeline-month') as HTMLElement;
          const month = row.getAttribute('data-month');
          const label = row.getAttribute('data-month-label') || '';
          if (monthLabel && month) {
            if (row.classList.contains('hidden')) {
              monthLabel.textContent = '';
            } else if (!seenMonths.has(month)) {
              seenMonths.add(month);
              monthLabel.textContent = label;
            } else {
              monthLabel.textContent = '';
            }
          }
        });
      });

      // Update post count
      const visibleCount = document.querySelectorAll('.timeline-row:not(.hidden)').length;
      const postCountEl = document.getElementById('post-count');
      if (postCountEl) {
        postCountEl.textContent = `${visibleCount} posts`;
      }
    }

    function filterByCategory(filter: string) {
      document.querySelectorAll('.timeline-row').forEach(row => {
        const cat = row.getAttribute('data-cat');
        if (filter === 'all' || cat === filter) {
          row.classList.remove('hidden');
        } else {
          row.classList.add('hidden');
        }
      });

      // Hide category column when filtering by specific category
      document.querySelectorAll('.timeline-cat').forEach(cat => {
        if (filter === 'all') {
          (cat as HTMLElement).style.display = '';
        } else {
          (cat as HTMLElement).style.display = 'none';
        }
      });

      updateTimelineDisplay();
    }

    function filterByPostSlugs(slugs: string[]) {
      document.querySelectorAll('.timeline-row').forEach(row => {
        const slug = row.getAttribute('data-slug');
        if (slug && slugs.includes(slug)) {
          row.classList.remove('hidden');
        } else {
          row.classList.add('hidden');
        }
      });

      // Hide category column when filtering by subcategory
      document.querySelectorAll('.timeline-cat').forEach(cat => {
        (cat as HTMLElement).style.display = 'none';
      });

      updateTimelineDisplay();
    }

    // Main category filter buttons
    document.querySelectorAll('.filter-btn').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const filter = newBtn.getAttribute('data-filter');
        const hasSubcategories = newBtn.getAttribute('data-has-subcategories') === 'true';
        const isActive = newBtn.classList.contains('active');

        // If already active, deselect and show all posts
        if (isActive) {
          newBtn.classList.remove('active');
          document.querySelectorAll('.subcategory-btn').forEach(b => b.classList.remove('active'));
          if (subcategoryFilters) {
            subcategoryFilters.classList.remove('visible');
          }
          // Restore timeline order before filtering
          const timeline = document.querySelector('.timeline') as HTMLElement;
          if (timeline && (window as any).originalTimelineHTML) {
            timeline.innerHTML = (window as any).originalTimelineHTML;
          }
          filterByCategory('all');
          return;
        }

        // Update active button
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.subcategory-btn').forEach(b => b.classList.remove('active'));
        newBtn.classList.add('active');

        // Restore timeline order before filtering
        const timeline = document.querySelector('.timeline') as HTMLElement;
        if (timeline && (window as any).originalTimelineHTML) {
          timeline.innerHTML = (window as any).originalTimelineHTML;
        }

        // Show/hide subcategories
        if (hasSubcategories && subcategoryFilters) {
          subcategoryFilters.classList.add('visible');
        } else if (subcategoryFilters) {
          subcategoryFilters.classList.remove('visible');
        }

        // Filter posts
        if (filter) {
          filterByCategory(filter);
        }
      });
    });

    // Subcategory filter buttons
    const timeline = document.querySelector('.timeline') as HTMLElement;
    if (timeline && !(window as any).originalTimelineHTML) {
      (window as any).originalTimelineHTML = timeline.innerHTML;
    }

    function restoreTimelineOrder() {
      if (timeline && (window as any).originalTimelineHTML) {
        timeline.innerHTML = (window as any).originalTimelineHTML;
      }
    }

    function filterByPostSlugsWithOrder(slugs: string[]) {
      if (!timeline) return;

      // Get all timeline rows
      const allRows = Array.from(document.querySelectorAll('.timeline-row')) as HTMLElement[];

      // Filter to matching rows and sort by the slug order
      const matchingRows = allRows
        .filter(row => {
          const slug = row.getAttribute('data-slug');
          return slug && slugs.includes(slug);
        })
        .sort((a, b) => {
          const slugA = a.getAttribute('data-slug') || '';
          const slugB = b.getAttribute('data-slug') || '';
          return slugs.indexOf(slugA) - slugs.indexOf(slugB);
        });

      // Clear timeline and add a simple ordered list
      timeline.innerHTML = '';
      const orderedContainer = document.createElement('div');
      orderedContainer.className = 'year-group';
      orderedContainer.innerHTML = '<div class="year-header">Start Here</div><div class="year-posts"></div>';
      const yearPosts = orderedContainer.querySelector('.year-posts') as HTMLElement;

      matchingRows.forEach((row, i) => {
        const clone = row.cloneNode(true) as HTMLElement;
        clone.classList.remove('hidden');
        // Clear month label except for first
        const monthLabel = clone.querySelector('.timeline-month') as HTMLElement;
        if (monthLabel) monthLabel.textContent = '';
        // Add order number instead of day
        const dayLabel = clone.querySelector('.timeline-day') as HTMLElement;
        if (dayLabel) dayLabel.textContent = String(i + 1).padStart(2, '0');
        yearPosts.appendChild(clone);
      });

      timeline.appendChild(orderedContainer);

      // Hide category column
      document.querySelectorAll('.timeline-cat').forEach(cat => {
        (cat as HTMLElement).style.display = 'none';
      });

      // Update post count
      const postCountEl = document.getElementById('post-count');
      if (postCountEl) {
        postCountEl.textContent = `${matchingRows.length} posts`;
      }
    }

    document.querySelectorAll('.subcategory-btn').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const isActive = newBtn.classList.contains('active');
        const hasCustomOrder = newBtn.getAttribute('data-custom-order') === 'true';

        // If already active, deselect and show all AI & environment posts
        if (isActive) {
          newBtn.classList.remove('active');
          restoreTimelineOrder();
          filterByCategory('ai-environment');
          return;
        }

        const postsJson = newBtn.getAttribute('data-posts');
        if (!postsJson) return;

        const postSlugs = JSON.parse(postsJson) as string[];

        // Update active subcategory button
        document.querySelectorAll('.subcategory-btn').forEach(b => b.classList.remove('active'));
        newBtn.classList.add('active');

        // Filter by post slugs (with custom order if specified)
        if (hasCustomOrder) {
          filterByPostSlugsWithOrder(postSlugs);
        } else {
          restoreTimelineOrder();
          filterByPostSlugs(postSlugs);
        }
      });
    });
  }

  // Initialize on first load
  initWritingPage();

  // Re-initialize after view transitions
  document.addEventListener('astro:page-load', initWritingPage);
</script>
