---
import Base from '@/layouts/Base.astro';
import { fetchSubstackPosts, fetchPostContent, categoryConfigs } from '@/lib/substack';
import { metaPosts, getMetaPostSlugs } from '@/lib/meta-posts';
import { bylines } from '@/lib/bylines';

// Fetch posts
const allPosts = await fetchSubstackPosts();
const metaSlugs = getMetaPostSlugs();

// Filter out meta posts from timeline
const posts = allPosts.filter(p => !metaSlugs.includes(p.slug));

// Fetch content for each meta post
const metaPostsWithContent = await Promise.all(
  metaPosts.map(async (meta) => {
    const content = await fetchPostContent(meta.slug);
    return { ...meta, content };
  })
);

// Group posts by month for timeline
interface MonthGroup {
  label: string;
  year: number;
  month: number;
  posts: typeof posts;
}

const postsByMonth: MonthGroup[] = [];
const monthMap = new Map<string, typeof posts>();

for (const post of posts) {
  const year = post.date.getFullYear();
  const month = post.date.getMonth();
  const key = `${year}-${month}`;

  if (!monthMap.has(key)) {
    monthMap.set(key, []);
  }
  monthMap.get(key)!.push(post);
}

// Convert map to sorted array
const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                    'July', 'August', 'September', 'October', 'November', 'December'];

for (const [key, monthPosts] of monthMap) {
  const [year, month] = key.split('-').map(Number);
  postsByMonth.push({
    label: `${monthNames[month]} ${year}`,
    year,
    month,
    posts: monthPosts.sort((a, b) => b.date.getTime() - a.date.getTime()),
  });
}

// Sort by date descending
postsByMonth.sort((a, b) => {
  if (a.year !== b.year) return b.year - a.year;
  return b.month - a.month;
});

// Get day only
function getDay(date: Date): string {
  return String(date.getDate()).padStart(2, '0');
}

// Get category short name
function getShortName(categoryName: string): string {
  const shortNames: Record<string, string> = {
    'AI & the Environment': 'AI & Env',
    'Artificial Intelligence': 'AI',
    'Animal Welfare': 'Animals',
    'Charity': 'Charity',
    'Politics': 'Politics',
    'Recs & Advice': 'Recs',
    'Misc': 'Misc',
  };
  return shortNames[categoryName] || categoryName;
}

// Get category slug
function getCategorySlug(categoryName: string): string {
  const config = categoryConfigs.find(c => c.name === categoryName);
  return config?.slug || categoryName.toLowerCase().replace(/\s+/g, '-');
}

// Filter categories to show (only ones with posts)
const activeCategories = categoryConfigs.filter(c =>
  posts.some(p => p.category === c.name)
);

// Process HTML content - fix internal links
function processContent(html: string): string {
  return html
    .replace(/href="https:\/\/andymasley\.substack\.com\/p\/([^"]+)"/g, 'href="/writing/$1"')
    .replace(/href="https:\/\/andymasley\.substack\.com([^"]*)"/g, 'href="https://andymasley.substack.com$1" target="_blank" rel="noopener"');
}

// Format byline date
function formatBylineDate(dateStr: string): string {
  const date = new Date(dateStr);
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  const year = date.getFullYear();
  return `${month}.${day}.${year}`;
}
---

<Base title="Writing">
  <div class="page-header">
    <h2 class="page-header__title">Writing</h2>
    <p class="page-header__description">Essays and analysis.</p>
  </div>

  <hr class="divider" />

  <!-- BLOG DROPDOWN -->
  <div class="top-dropdown">
    <button class="top-toggle" aria-expanded="true" data-section="blog">
      <span class="top-arrow">&#9660;</span>
      <span class="top-title">Blog</span>
    </button>
    <div class="top-content" data-content="blog">
      <!-- META SUBSECTION -->
      <div class="section-header">Meta</div>
      <div class="meta-section">
        {metaPostsWithContent.map((meta) => (
          <div class="meta-item">
            <button class="meta-toggle" aria-expanded="false">
              <span class="meta-arrow">&#9654;</span>
              <span class="meta-title">{meta.title}</span>
            </button>
            <div class="meta-content" hidden>
              <p class="meta-source">
                <a href={meta.url} target="_blank" rel="noopener">Originally published on Substack</a>
              </p>
              <div class="meta-body prose" set:html={processContent(meta.content)} />
            </div>
          </div>
        ))}
      </div>

      <!-- TIMELINE SUBSECTION -->
      <div class="section-header">Timeline</div>
      <div class="timeline-filters">
        <button class="filter-btn active" data-filter="all">All</button>
        {activeCategories.map(cat => (
          <button class="filter-btn" data-filter={cat.slug}>
            {getShortName(cat.name)}
          </button>
        ))}
      </div>

      <div class="timeline">
        {postsByMonth.map(monthGroup => (
          <div class="month-group" data-month={`${monthGroup.year}-${monthGroup.month}`}>
            <div class="month-header">{monthGroup.label}</div>
            <div class="month-posts">
              {monthGroup.posts.map(post => (
                <div class="timeline-row" data-cat={getCategorySlug(post.category)}>
                  <span class="timeline-day">{getDay(post.date)}</span>
                  <a href={post.url} target="_blank" rel="noopener" class="timeline-link">
                    {post.title}
                  </a>
                  <span class="timeline-cat">{getShortName(post.category)}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <p class="post-count">{posts.length} posts</p>
    </div>
  </div>

  <!-- BYLINES DROPDOWN -->
  <div class="top-dropdown">
    <button class="top-toggle" aria-expanded="false" data-section="bylines">
      <span class="top-arrow">&#9654;</span>
      <span class="top-title">Bylines</span>
    </button>
    <div class="top-content" data-content="bylines" hidden>
      {bylines.length > 0 ? (
        <div class="bylines-list">
          {bylines.map(byline => (
            <div class="byline-row">
              <span class="byline-date">{formatBylineDate(byline.date)}</span>
              <a href={byline.url} target="_blank" rel="noopener" class="byline-link">
                {byline.title}
              </a>
              <span class="byline-pub">{byline.publication}</span>
            </div>
          ))}
        </div>
      ) : (
        <p class="bylines-placeholder">Coming soon.</p>
      )}
    </div>
  </div>

  <hr class="divider" />

  <div class="back-link">
    <a href="/">‚Üê index</a>
  </div>
</Base>

<style>
  /* Top-level dropdowns */
  .top-dropdown {
    margin-bottom: 8px;
  }

  .top-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 10px 0;
    background: none;
    border: none;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    cursor: pointer;
    text-align: left;
  }

  .top-toggle:hover {
    color: var(--accent);
  }

  .top-arrow {
    font-size: 0.65rem;
    transition: transform 0.2s ease;
    color: var(--dim);
    width: 12px;
  }

  .top-toggle[aria-expanded="true"] .top-arrow {
    transform: rotate(0deg);
  }

  .top-toggle[aria-expanded="false"] .top-arrow {
    transform: rotate(-90deg);
  }

  .top-title {
    flex: 1;
  }

  .top-content {
    padding-left: 22px;
    padding-bottom: 16px;
  }

  /* Section headers */
  .section-header {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--dim);
    margin: 16px 0 12px;
  }

  .section-header:first-child {
    margin-top: 8px;
  }

  /* Meta section */
  .meta-section {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 20px;
  }

  .meta-item {
    border: 1px solid var(--border);
  }

  .meta-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 10px 14px;
    background: none;
    border: none;
    font-family: inherit;
    font-size: 0.875rem;
    color: var(--text);
    cursor: pointer;
    text-align: left;
    transition: background 0.15s ease;
  }

  .meta-toggle:hover {
    background: rgba(0, 0, 0, 0.03);
  }

  [data-theme="dark"] .meta-toggle:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .meta-arrow {
    font-size: 0.6rem;
    transition: transform 0.2s ease;
    color: var(--dim);
  }

  .meta-toggle[aria-expanded="true"] .meta-arrow {
    transform: rotate(90deg);
  }

  .meta-title {
    flex: 1;
  }

  .meta-content {
    padding: 0 14px 14px 32px;
    border-left: 3px solid var(--accent);
    margin-left: 14px;
    margin-bottom: 14px;
  }

  .meta-source {
    font-size: 0.75rem;
    color: var(--dim);
    margin-bottom: 14px;
  }

  .meta-source a {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .meta-source a:hover {
    text-decoration: none;
  }

  .meta-body {
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .meta-body :global(h1),
  .meta-body :global(h2),
  .meta-body :global(h3) {
    font-family: var(--font-serif);
    font-weight: normal;
    margin: 1.5em 0 0.5em;
  }

  .meta-body :global(h1) { font-size: 1.3rem; }
  .meta-body :global(h2) { font-size: 1.1rem; }
  .meta-body :global(h3) { font-size: 1rem; }

  .meta-body :global(p) {
    margin: 0 0 1em;
  }

  .meta-body :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .meta-body :global(a:hover) {
    text-decoration: none;
  }

  .meta-body :global(ul),
  .meta-body :global(ol) {
    margin: 0 0 1em;
    padding-left: 1.5em;
  }

  .meta-body :global(li) {
    margin-bottom: 0.5em;
  }

  .meta-body :global(blockquote) {
    margin: 1em 0;
    padding-left: 1em;
    border-left: 2px solid var(--border);
    color: var(--dim);
    font-style: italic;
  }

  .meta-body :global(img) {
    max-width: 100%;
    height: auto;
    margin: 1em 0;
  }

  .meta-body :global(figure) {
    margin: 1em 0;
  }

  .meta-body :global(figcaption) {
    font-size: 0.75rem;
    color: var(--dim);
    text-align: center;
    margin-top: 0.5em;
  }

  /* Timeline filters */
  .timeline-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 16px;
  }

  .filter-btn {
    background: none;
    border: 1px solid var(--border);
    padding: 3px 10px;
    font-family: inherit;
    font-size: 0.75rem;
    color: var(--dim);
    cursor: pointer;
    border-radius: 3px;
    transition: all 0.15s ease;
  }

  .filter-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .filter-btn.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  /* Timeline */
  .timeline {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .month-group.hidden {
    display: none;
  }

  .month-header {
    font-size: 0.8rem;
    font-weight: normal;
    color: var(--text);
    margin-bottom: 6px;
    padding-bottom: 4px;
    border-bottom: 1px solid var(--border);
  }

  .month-posts {
    display: flex;
    flex-direction: column;
    gap: 3px;
    padding-left: 6px;
  }

  .timeline-row {
    display: grid;
    grid-template-columns: 24px 1fr auto;
    gap: 10px;
    font-size: 0.8rem;
    align-items: baseline;
  }

  .timeline-row.hidden {
    display: none;
  }

  .timeline-day {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--dim);
    text-align: right;
  }

  .timeline-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    min-width: 0;
  }

  .timeline-link:hover {
    text-decoration: none;
  }

  .timeline-cat {
    font-size: 0.65rem;
    color: var(--dim);
    white-space: nowrap;
  }

  .post-count {
    font-size: 0.7rem;
    color: var(--dim);
    margin-top: 16px;
  }

  /* Bylines */
  .bylines-placeholder {
    font-size: 0.875rem;
    color: var(--dim);
    font-style: italic;
    margin: 8px 0;
  }

  .bylines-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .byline-row {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 12px;
    font-size: 0.8rem;
    align-items: baseline;
  }

  .byline-date {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--dim);
  }

  .byline-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .byline-link:hover {
    text-decoration: none;
  }

  .byline-pub {
    font-size: 0.7rem;
    color: var(--dim);
    white-space: nowrap;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .timeline-row {
      grid-template-columns: 24px 1fr;
    }

    .timeline-cat {
      display: none;
    }

    .byline-row {
      grid-template-columns: 1fr;
      gap: 2px;
    }

    .byline-date {
      order: 2;
    }

    .byline-link {
      order: 1;
    }

    .byline-pub {
      order: 3;
    }

    .meta-content {
      margin-left: 6px;
      padding-left: 14px;
    }

    .top-content {
      padding-left: 12px;
    }
  }
</style>

<script>
  // Top-level dropdown toggle
  document.querySelectorAll('.top-toggle').forEach(btn => {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));

      const section = btn.getAttribute('data-section');
      const content = document.querySelector(`[data-content="${section}"]`) as HTMLElement;
      if (content) {
        content.hidden = expanded;
      }
    });
  });

  // Meta dropdown toggle
  document.querySelectorAll('.meta-toggle').forEach(btn => {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));

      const content = btn.nextElementSibling as HTMLElement;
      if (content) {
        content.hidden = expanded;
      }
    });
  });

  // Timeline filtering
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');

      // Update active button
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Filter posts
      document.querySelectorAll('.timeline-row').forEach(row => {
        const cat = row.getAttribute('data-cat');
        if (filter === 'all' || cat === filter) {
          row.classList.remove('hidden');
        } else {
          row.classList.add('hidden');
        }
      });

      // Hide empty months
      document.querySelectorAll('.month-group').forEach(group => {
        const visiblePosts = group.querySelectorAll('.timeline-row:not(.hidden)');
        if (visiblePosts.length === 0) {
          group.classList.add('hidden');
        } else {
          group.classList.remove('hidden');
        }
      });
    });
  });
</script>
