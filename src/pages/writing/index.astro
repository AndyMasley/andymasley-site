---
import Base from '@/layouts/Base.astro';
import { getCollection } from 'astro:content';
import { fetchSubstackPosts, groupByCategory, categoryConfigs } from '@/lib/substack';

// Fetch posts and categories
const posts = await fetchSubstackPosts();
const postsByCategory = groupByCategory(posts);
const categoryContent = await getCollection('categories');

// Sort categories by order
const sortedCategories = categoryContent.sort((a, b) => a.data.order - b.data.order);

// Get category overviews mapped by slug
const categoryOverviews: Record<string, { name: string; shortName: string; body: string }> = {};
for (const cat of sortedCategories) {
  const { Content } = await cat.render();
  categoryOverviews[cat.data.categorySlug] = {
    name: cat.data.name,
    shortName: cat.data.shortName,
    body: cat.body || '',
  };
}

// Group posts by month for timeline
interface MonthGroup {
  label: string;
  year: number;
  month: number;
  posts: typeof posts;
}

const postsByMonth: MonthGroup[] = [];
const monthMap = new Map<string, typeof posts>();

for (const post of posts) {
  const year = post.date.getFullYear();
  const month = post.date.getMonth();
  const key = `${year}-${month}`;

  if (!monthMap.has(key)) {
    monthMap.set(key, []);
  }
  monthMap.get(key)!.push(post);
}

// Convert map to sorted array
const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                    'July', 'August', 'September', 'October', 'November', 'December'];

for (const [key, monthPosts] of monthMap) {
  const [year, month] = key.split('-').map(Number);
  postsByMonth.push({
    label: `${monthNames[month]} ${year}`,
    year,
    month,
    posts: monthPosts.sort((a, b) => b.date.getTime() - a.date.getTime()),
  });
}

// Sort by date descending
postsByMonth.sort((a, b) => {
  if (a.year !== b.year) return b.year - a.year;
  return b.month - a.month;
});

// Format date as MM.DD
function formatShortDate(date: Date): string {
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  return `${month}.${day}`;
}

// Get day only
function getDay(date: Date): string {
  return String(date.getDate()).padStart(2, '0');
}

// Get category short name
function getShortName(categoryName: string): string {
  const config = categoryConfigs.find(c => c.name === categoryName);
  if (!config) return categoryName;
  const overview = categoryOverviews[config.slug];
  return overview?.shortName || categoryName;
}

// Get category slug
function getCategorySlug(categoryName: string): string {
  const config = categoryConfigs.find(c => c.name === categoryName);
  return config?.slug || categoryName.toLowerCase().replace(/\s+/g, '-');
}
---

<Base title="Writing">
  <div class="page-header">
    <h2 class="page-header__title">Writing</h2>
    <p class="page-header__description">
      Essays and analysis from <a href="https://andymasley.substack.com" target="_blank" rel="noopener">Substack</a>.
    </p>
  </div>

  <hr class="divider" />

  <!-- CATEGORIES SECTION -->
  <div class="section-header">Categories</div>

  <div class="categories-container">
    <div class="categories-list">
      {sortedCategories.map((cat, index) => {
        const count = postsByCategory[cat.data.name]?.length || 0;
        return (
          <button
            class={`category-btn ${index === 0 ? 'active' : ''}`}
            data-category={cat.data.categorySlug}
          >
            <span class="category-bullet">●</span>
            <span class="category-name">{cat.data.shortName}</span>
            <span class="category-count">({count})</span>
          </button>
        );
      })}
    </div>

    <div class="categories-content">
      {sortedCategories.map((cat, index) => {
        const catPosts = postsByCategory[cat.data.name] || [];
        return (
          <div
            class={`category-panel ${index === 0 ? 'active' : ''}`}
            data-panel={cat.data.categorySlug}
          >
            <div class="category-title">{cat.data.name}</div>
            <p class="category-overview">{cat.body}</p>
            <div class="category-posts">
              {catPosts.map(post => (
                <div class="post-row">
                  <span class="post-date">{formatShortDate(post.date)}</span>
                  <a href={post.url} target="_blank" rel="noopener" class="post-link">
                    {post.title}
                  </a>
                </div>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </div>

  <hr class="divider" />

  <!-- TIMELINE SECTION -->
  <div class="section-header">Timeline</div>

  <div class="timeline-filters">
    <button class="filter-btn active" data-filter="all">All</button>
    {sortedCategories.map(cat => (
      <button class="filter-btn" data-filter={cat.data.categorySlug}>
        {cat.data.shortName}
      </button>
    ))}
  </div>

  <div class="timeline">
    {postsByMonth.map(monthGroup => (
      <div class="month-group" data-month={`${monthGroup.year}-${monthGroup.month}`}>
        <div class="month-header">{monthGroup.label}</div>
        <div class="month-posts">
          {monthGroup.posts.map(post => (
            <div class="timeline-row" data-cat={getCategorySlug(post.category)}>
              <span class="timeline-day">{getDay(post.date)}</span>
              <a href={post.url} target="_blank" rel="noopener" class="timeline-link">
                {post.title}
              </a>
              <span class="timeline-cat">{getShortName(post.category)}</span>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>

  <hr class="divider" />

  <div class="back-link">
    <a href="/">← index</a>
  </div>

  <p class="meta">
    {posts.length} posts
  </p>
</Base>

<style>
  /* Section headers */
  .section-header {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--dim);
    margin-bottom: 16px;
  }

  /* Categories container */
  .categories-container {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 24px;
    border: 1px solid var(--border);
    padding: 16px;
    margin-bottom: 24px;
    min-height: 300px;
  }

  .categories-list {
    display: flex;
    flex-direction: column;
    gap: 4px;
    border-right: 1px solid var(--border);
    padding-right: 16px;
  }

  .category-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    background: none;
    border: none;
    padding: 6px 8px;
    font-family: inherit;
    font-size: 0.875rem;
    color: var(--text);
    cursor: pointer;
    text-align: left;
    border-radius: 3px;
    transition: background 0.15s ease;
  }

  .category-btn:hover {
    background: rgba(0, 0, 0, 0.03);
  }

  [data-theme="dark"] .category-btn:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .category-btn.active {
    color: var(--accent);
  }

  .category-bullet {
    opacity: 0;
    font-size: 0.5rem;
    transition: opacity 0.15s ease;
  }

  .category-btn.active .category-bullet {
    opacity: 1;
    color: var(--accent);
  }

  .category-count {
    color: var(--dim);
    font-size: 0.8rem;
    margin-left: auto;
  }

  /* Category panels */
  .categories-content {
    min-width: 0;
  }

  .category-panel {
    display: none;
  }

  .category-panel.active {
    display: block;
  }

  .category-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--dim);
    margin-bottom: 12px;
  }

  .category-overview {
    font-size: 0.875rem;
    color: var(--dim);
    margin: 0 0 16px 0;
    line-height: 1.5;
  }

  .category-posts {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .post-row {
    display: grid;
    grid-template-columns: 50px 1fr;
    gap: 12px;
    font-size: 0.875rem;
    align-items: baseline;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--dim);
    white-space: nowrap;
  }

  .post-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .post-link:hover {
    text-decoration: none;
  }

  /* Timeline filters */
  .timeline-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
  }

  .filter-btn {
    background: none;
    border: 1px solid var(--border);
    padding: 4px 12px;
    font-family: inherit;
    font-size: 0.8rem;
    color: var(--dim);
    cursor: pointer;
    border-radius: 3px;
    transition: all 0.15s ease;
  }

  .filter-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .filter-btn.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  /* Timeline */
  .timeline {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .month-group.hidden {
    display: none;
  }

  .month-header {
    font-size: 0.875rem;
    font-weight: normal;
    color: var(--text);
    margin-bottom: 8px;
    padding-bottom: 4px;
    border-bottom: 1px solid var(--border);
  }

  .month-posts {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding-left: 8px;
  }

  .timeline-row {
    display: grid;
    grid-template-columns: 28px 1fr auto;
    gap: 12px;
    font-size: 0.875rem;
    align-items: baseline;
  }

  .timeline-row.hidden {
    display: none;
  }

  .timeline-day {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--dim);
    text-align: right;
  }

  .timeline-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    min-width: 0;
  }

  .timeline-link:hover {
    text-decoration: none;
  }

  .timeline-cat {
    font-size: 0.7rem;
    color: var(--dim);
    white-space: nowrap;
  }

  .meta {
    font-size: 0.75rem;
    color: var(--dim);
    margin-top: 24px;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .categories-container {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .categories-list {
      flex-direction: row;
      flex-wrap: wrap;
      border-right: none;
      border-bottom: 1px solid var(--border);
      padding-right: 0;
      padding-bottom: 12px;
    }

    .category-btn {
      padding: 4px 8px;
    }

    .timeline-row {
      grid-template-columns: 28px 1fr;
    }

    .timeline-cat {
      display: none;
    }
  }
</style>

<script>
  // Category panel switching
  document.querySelectorAll('.category-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category');

      // Update active button
      document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Update active panel
      document.querySelectorAll('.category-panel').forEach(p => p.classList.remove('active'));
      document.querySelector(`[data-panel="${category}"]`)?.classList.add('active');
    });
  });

  // Timeline filtering
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');

      // Update active button
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Filter posts
      document.querySelectorAll('.timeline-row').forEach(row => {
        const cat = row.getAttribute('data-cat');
        if (filter === 'all' || cat === filter) {
          row.classList.remove('hidden');
        } else {
          row.classList.add('hidden');
        }
      });

      // Hide empty months
      document.querySelectorAll('.month-group').forEach(group => {
        const visiblePosts = group.querySelectorAll('.timeline-row:not(.hidden)');
        if (visiblePosts.length === 0) {
          group.classList.add('hidden');
        } else {
          group.classList.remove('hidden');
        }
      });
    });
  });
</script>
