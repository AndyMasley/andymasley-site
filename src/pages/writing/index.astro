---
import Base from '@/layouts/Base.astro';
import { fetchSubstackPosts, fetchPostContent, categoryConfigs } from '@/lib/substack';
import { metaPosts, getMetaPostSlugs } from '@/lib/meta-posts';
import { bylines } from '@/lib/bylines';
import { fetchEAForumPosts } from '@/lib/eaforum';

// Unified post interface for timeline
interface TimelinePost {
  title: string;
  slug: string;
  date: Date;
  url: string;
  category: string;
}

// Fetch posts from both sources
const [allSubstackPosts, eaForumPosts] = await Promise.all([
  fetchSubstackPosts(),
  fetchEAForumPosts()
]);

const metaSlugs = getMetaPostSlugs();

// Filter out meta posts from Substack timeline
const substackPosts: TimelinePost[] = allSubstackPosts
  .filter(p => !metaSlugs.includes(p.slug))
  .map(p => ({
    title: p.title,
    slug: p.slug,
    date: p.date,
    url: p.url,
    category: p.category
  }));

// Convert EA Forum posts to timeline format
const eaForumTimelinePosts: TimelinePost[] = eaForumPosts.map(p => ({
  title: p.title,
  slug: p.slug,
  date: p.date,
  url: p.url,
  category: 'EA Forum'
}));

// Combine all posts
const posts: TimelinePost[] = [...substackPosts, ...eaForumTimelinePosts];

// Fetch content for each meta post
const metaPostsWithContent = await Promise.all(
  metaPosts.map(async (meta) => {
    const content = await fetchPostContent(meta.slug);
    return { ...meta, content };
  })
);

// Group posts by year and month for timeline
interface MonthGroup {
  label: string;
  month: number;
  posts: TimelinePost[];
}

interface YearGroup {
  year: number;
  months: MonthGroup[];
}

const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                    'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

const yearMap = new Map<number, Map<number, TimelinePost[]>>();

for (const post of posts) {
  const year = post.date.getFullYear();
  const month = post.date.getMonth();

  if (!yearMap.has(year)) {
    yearMap.set(year, new Map());
  }
  const monthMap = yearMap.get(year)!;
  if (!monthMap.has(month)) {
    monthMap.set(month, []);
  }
  monthMap.get(month)!.push(post);
}

// Convert to sorted array structure
const postsByYear: YearGroup[] = [];

for (const [year, monthMap] of yearMap) {
  const months: MonthGroup[] = [];
  for (const [month, monthPosts] of monthMap) {
    months.push({
      label: monthNames[month],
      month,
      posts: monthPosts.sort((a, b) => b.date.getTime() - a.date.getTime()),
    });
  }
  // Sort months descending
  months.sort((a, b) => b.month - a.month);
  postsByYear.push({ year, months });
}

// Sort years descending
postsByYear.sort((a, b) => b.year - a.year);

// Get day only
function getDay(date: Date): string {
  return String(date.getDate()).padStart(2, '0');
}

// Get category short name
function getShortName(categoryName: string): string {
  const shortNames: Record<string, string> = {
    'AI & the Environment': 'AI & Env',
    'Artificial Intelligence': 'AI',
    'Animal Welfare': 'Animals',
    'Charity': 'EA',
    'Politics': 'Politics',
    'Recs & Advice': 'Recs',
    'Misc': 'Misc',
    'EA Forum': 'EA Forum',
  };
  return shortNames[categoryName] || categoryName;
}

// Get category slug
function getCategorySlug(categoryName: string): string {
  if (categoryName === 'EA Forum') return 'ea-forum';
  const config = categoryConfigs.find(c => c.name === categoryName);
  return config?.slug || categoryName.toLowerCase().replace(/\s+/g, '-');
}

// Filter categories to show (only ones with posts)
// Include both Substack categories and EA Forum
const activeCategories = [
  ...categoryConfigs.filter(c => posts.some(p => p.category === c.name)),
  ...(eaForumTimelinePosts.length > 0 ? [{ name: 'EA Forum', slug: 'ea-forum', overview: '', sectionIds: [] }] : [])
];

// Process HTML content - fix internal links
function processContent(html: string): string {
  return html
    .replace(/href="https:\/\/andymasley\.substack\.com\/p\/([^"]+)"/g, 'href="/writing/$1"')
    .replace(/href="https:\/\/andymasley\.substack\.com([^"]*)"/g, 'href="https://andymasley.substack.com$1" target="_blank" rel="noopener"');
}

// Format byline date
function formatBylineDate(dateStr: string): string {
  const date = new Date(dateStr);
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  const year = date.getFullYear();
  return `${month}.${day}.${year}`;
}

---

<Base title="Writing">
  <div class="page-header">
    <h2 class="page-header__title">Writing</h2>
  </div>

  <hr class="divider" />

  <!-- BLOG DROPDOWN -->
  <div class="top-dropdown">
    <button class="top-toggle" aria-expanded="true" data-section="blog">
      <span class="top-arrow">&#9660;</span>
      <span class="top-title">Blog</span>
    </button>
    <div class="top-content" data-content="blog">
      <!-- META SUBSECTION -->
      <div class="section-header">Meta</div>
      <div class="meta-section">
        {metaPostsWithContent.map((meta) => (
          <div class="meta-item">
            <button class="meta-toggle" aria-expanded="false">
              <span class="meta-arrow">&#9654;</span>
              <span class="meta-title">{meta.title}</span>
            </button>
            <div class="meta-content" hidden>
              <p class="meta-source">
                <a href={meta.url} target="_blank" rel="noopener">Originally published on Substack</a>
              </p>
              <div class="meta-body prose" set:html={processContent(meta.content)} />
            </div>
          </div>
        ))}
      </div>

      <!-- TIMELINE SUBSECTION -->
      <div class="section-header">Timeline</div>
      <div class="timeline-filters">
        <button class="filter-btn active" data-filter="all">All</button>
        {activeCategories.map(cat => (
          <button class="filter-btn" data-filter={cat.slug}>
            {getShortName(cat.name)}
          </button>
        ))}
      </div>

      <div class="timeline">
        {postsByYear.map(yearGroup => (
          <div class="year-group" data-year={yearGroup.year}>
            <div class="year-header">{yearGroup.year}</div>
            <div class="year-posts">
              {yearGroup.months.map(monthGroup => (
                <>
                  {monthGroup.posts.map((post, i) => (
                    <div class="timeline-row" data-cat={getCategorySlug(post.category)} data-month={`${yearGroup.year}-${monthGroup.month}`} data-month-label={monthGroup.label}>
                      <span class="timeline-month">{i === 0 ? monthGroup.label : ''}</span>
                      <span class="timeline-day">{getDay(post.date)}</span>
                      <a href={post.url} target="_blank" rel="noopener" class="timeline-link">
                        {post.title}
                      </a>
                      <span class="timeline-cat">{getShortName(post.category)}</span>
                    </div>
                  ))}
                </>
              ))}
            </div>
          </div>
        ))}
      </div>

      <p class="post-count" id="post-count">{posts.length} posts</p>
    </div>
  </div>

  <!-- BYLINES DROPDOWN -->
  <div class="top-dropdown">
    <button class="top-toggle" aria-expanded="false" data-section="bylines">
      <span class="top-arrow">&#9654;</span>
      <span class="top-title">Bylines</span>
    </button>
    <div class="top-content" data-content="bylines" hidden>
      {bylines.length > 0 ? (
        <div class="bylines-list">
          {bylines.map(byline => (
            <div class="byline-row">
              <span class="byline-date">{formatBylineDate(byline.date)}</span>
              <a href={byline.url} target="_blank" rel="noopener" class="byline-link">
                {byline.title}
              </a>
              <span class="byline-pub">{byline.publication}</span>
            </div>
          ))}
        </div>
      ) : (
        <p class="bylines-placeholder">Coming soon.</p>
      )}
    </div>
  </div>

  <hr class="divider" />

  <div class="back-link">
    <a href="/">‚Üê home</a>
  </div>
</Base>

<style>
  /* Top-level dropdowns */
  .top-dropdown {
    margin-bottom: 8px;
  }

  .top-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 10px 0;
    background: none;
    border: none;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    cursor: pointer;
    text-align: left;
  }

  .top-toggle:hover {
    color: var(--accent);
  }

  .top-arrow {
    font-size: 0.65rem;
    transition: transform 0.2s ease;
    color: var(--dim);
    width: 12px;
  }

  .top-toggle[aria-expanded="true"] .top-arrow {
    transform: rotate(0deg);
  }

  .top-toggle[aria-expanded="false"] .top-arrow {
    transform: rotate(-90deg);
  }

  .top-title {
    flex: 1;
  }

  .top-content {
    padding-left: 22px;
    padding-bottom: 16px;
  }

  /* Section headers */
  .section-header {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--dim);
    margin: 16px 0 12px;
  }

  .section-header:first-child {
    margin-top: 8px;
  }

  /* Meta section */
  .meta-section {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 20px;
  }

  .meta-item {
    border: 1px solid var(--border);
  }

  .meta-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 10px 14px;
    background: none;
    border: none;
    font-family: inherit;
    font-size: 0.875rem;
    color: var(--text);
    cursor: pointer;
    text-align: left;
    transition: background 0.15s ease;
  }

  .meta-toggle:hover {
    background: rgba(0, 0, 0, 0.03);
  }

  [data-theme="dark"] .meta-toggle:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .meta-arrow {
    font-size: 0.6rem;
    transition: transform 0.2s ease;
    color: var(--dim);
  }

  .meta-toggle[aria-expanded="true"] .meta-arrow {
    transform: rotate(90deg);
  }

  .meta-title {
    flex: 1;
  }

  .meta-content {
    padding: 0 14px 14px 14px;
    margin-bottom: 14px;
  }

  .meta-source {
    font-size: 0.75rem;
    color: var(--dim);
    margin-bottom: 14px;
  }

  .meta-source a {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .meta-source a:hover {
    text-decoration: none;
  }

  .meta-body {
    font-size: 0.8rem;
    line-height: 1.5;
  }

  .meta-body :global(h1),
  .meta-body :global(h2),
  .meta-body :global(h3) {
    font-family: var(--font-serif);
    font-weight: normal;
    margin: 1em 0 0.4em;
  }

  .meta-body :global(h1) { font-size: 0.9rem; }
  .meta-body :global(h2) { font-size: 0.85rem; }
  .meta-body :global(h3) { font-size: 0.8rem; }

  .meta-body :global(p) {
    margin: 0 0 0.6em;
  }

  .meta-body :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    font-weight: normal;
  }

  .meta-body :global(a:hover) {
    text-decoration: none;
  }

  .meta-body :global(strong) {
    font-weight: 500;
  }

  /* Style standalone strong tags as sub-headings */
  .meta-body :global(p:has(> strong:only-child)) {
    margin: 0.8em 0 0.3em 0;
    font-size: 0.75rem;
    color: var(--dim);
  }

  .meta-body :global(ul),
  .meta-body :global(ol) {
    margin: 0 0 0.6em;
    padding-left: 1.2em;
  }

  .meta-body :global(li) {
    margin-bottom: 0.2em;
  }

  .meta-body :global(blockquote) {
    margin: 0.6em 0;
    padding-left: 0.8em;
    border-left: 2px solid var(--border);
    color: var(--dim);
    font-style: italic;
  }

  .meta-body :global(img) {
    max-width: 100%;
    height: auto;
    margin: 0.6em 0;
  }

  .meta-body :global(figure) {
    margin: 0.6em 0;
  }

  .meta-body :global(figcaption) {
    font-size: 0.65rem;
    color: var(--dim);
    text-align: center;
    margin-top: 0.3em;
  }

  /* Timeline filters */
  .timeline-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 16px;
  }

  .filter-btn {
    background: none;
    border: 1px solid var(--border);
    padding: 3px 10px;
    font-family: inherit;
    font-size: 0.75rem;
    color: var(--dim);
    cursor: pointer;
    border-radius: 3px;
    transition: all 0.15s ease;
  }

  .filter-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .filter-btn.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  /* Timeline */
  .timeline {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .year-group.hidden {
    display: none;
  }

  .year-header {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--dim);
    margin-bottom: 10px;
    padding-bottom: 4px;
    border-bottom: 1px solid var(--border);
  }

  .year-posts {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .timeline-row {
    display: grid;
    grid-template-columns: 32px 24px 1fr auto;
    gap: 8px;
    font-size: 0.8rem;
    align-items: baseline;
  }

  .timeline-row.hidden {
    display: none;
  }

  .timeline-month {
    font-size: 0.7rem;
    color: var(--dim);
    text-align: left;
  }

  .timeline-day {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--dim);
    text-align: right;
  }

  .timeline-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
    min-width: 0;
  }

  .timeline-link:hover {
    text-decoration: none;
  }

  .timeline-cat {
    font-size: 0.65rem;
    color: var(--dim);
    white-space: nowrap;
  }

  .post-count {
    font-size: 0.7rem;
    color: var(--dim);
    margin-top: 16px;
  }

  /* Bylines */
  .bylines-placeholder {
    font-size: 0.875rem;
    color: var(--dim);
    font-style: italic;
    margin: 8px 0;
  }

  .bylines-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .byline-row {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 12px;
    font-size: 0.8rem;
    align-items: baseline;
  }

  .byline-date {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--dim);
  }

  .byline-link {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .byline-link:hover {
    text-decoration: none;
  }

  .byline-pub {
    font-size: 0.7rem;
    color: var(--dim);
    white-space: nowrap;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .timeline-row {
      grid-template-columns: 24px 1fr;
    }

    .timeline-month,
    .timeline-cat {
      display: none;
    }

    .byline-row {
      grid-template-columns: 1fr;
      gap: 2px;
    }

    .byline-date {
      order: 2;
    }

    .byline-link {
      order: 1;
    }

    .byline-pub {
      order: 3;
    }

    .meta-content {
      margin-left: 6px;
      padding-left: 14px;
    }

    .top-content {
      padding-left: 12px;
    }
  }
</style>

<script>
  function initWritingPage() {
    // Top-level dropdown toggle
    document.querySelectorAll('.top-toggle').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const expanded = newBtn.getAttribute('aria-expanded') === 'true';
        newBtn.setAttribute('aria-expanded', String(!expanded));

        const section = newBtn.getAttribute('data-section');
        const content = document.querySelector(`[data-content="${section}"]`) as HTMLElement;
        if (content) {
          content.hidden = expanded;
        }
      });
    });

    // Meta dropdown toggle
    document.querySelectorAll('.meta-toggle').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const expanded = newBtn.getAttribute('aria-expanded') === 'true';
        newBtn.setAttribute('aria-expanded', String(!expanded));

        const content = newBtn.nextElementSibling as HTMLElement;
        if (content) {
          content.hidden = expanded;
        }
      });
    });

    // Timeline filtering
    document.querySelectorAll('.filter-btn').forEach(btn => {
      const newBtn = btn.cloneNode(true) as HTMLElement;
      btn.parentNode?.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', () => {
        const filter = newBtn.getAttribute('data-filter');

        // Update active button
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        newBtn.classList.add('active');

        // Filter posts
        document.querySelectorAll('.timeline-row').forEach(row => {
          const cat = row.getAttribute('data-cat');
          if (filter === 'all' || cat === filter) {
            row.classList.remove('hidden');
          } else {
            row.classList.add('hidden');
          }
        });

        // Hide category column when filtering by specific category
        document.querySelectorAll('.timeline-cat').forEach(cat => {
          if (filter === 'all') {
            (cat as HTMLElement).style.display = '';
          } else {
            (cat as HTMLElement).style.display = 'none';
          }
        });

        // Hide empty years
        document.querySelectorAll('.year-group').forEach(group => {
          const visiblePosts = group.querySelectorAll('.timeline-row:not(.hidden)');
          if (visiblePosts.length === 0) {
            group.classList.add('hidden');
          } else {
            group.classList.remove('hidden');
          }
        });

        // Update month labels (show on first visible post of each month)
        document.querySelectorAll('.year-group').forEach(yearGroup => {
          const seenMonths = new Set();
          yearGroup.querySelectorAll('.timeline-row').forEach(row => {
            const monthLabel = row.querySelector('.timeline-month') as HTMLElement;
            const month = row.getAttribute('data-month');
            const label = row.getAttribute('data-month-label') || '';
            if (monthLabel && month) {
              if (row.classList.contains('hidden')) {
                monthLabel.textContent = '';
              } else if (!seenMonths.has(month)) {
                seenMonths.add(month);
                monthLabel.textContent = label;
              } else {
                monthLabel.textContent = '';
              }
            }
          });
        });

        // Update post count
        const visibleCount = document.querySelectorAll('.timeline-row:not(.hidden)').length;
        const postCountEl = document.getElementById('post-count');
        if (postCountEl) {
          postCountEl.textContent = `${visibleCount} posts`;
        }
      });
    });
  }

  // Initialize on first load
  initWritingPage();

  // Re-initialize after view transitions
  document.addEventListener('astro:page-load', initWritingPage);
</script>
